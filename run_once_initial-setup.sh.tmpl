#!/usr/bin/env bash

mkdir -p ${HOME}/.config/zsh ${HOME}/.cache/zsh ${HOME}/.local/share ${HOME}/.local/state

{{ if eq .chezmoi.os "darwin" -}}
# Homebrewのインストール
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
# zshの設定ファイルをXDGベースに設定
echo "ZDOTDIR=${HOME}/.config/zsh" | sudo tee -a /etc/zshenv > /dev/null
{{- end }}
